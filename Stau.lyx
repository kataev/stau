\[
\frac{F}{dt}=\frac{V_{np}-Zy}{2ydy};\,\,\frac{dt}{f}=\frac{2ydy}{zy-V_{np}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int\frac{udu}{au-b}=\frac{u}{a}+\frac{b}{a^{2}}+\ln\left(au-b\right)+C
\]

